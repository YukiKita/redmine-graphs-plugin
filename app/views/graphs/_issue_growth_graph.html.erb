<% unless @issues.nil? %>
    <%= tag("embed", :width => "100%", :height => 300, :type => "image/svg+xml",
    :src => url_for(:controller => 'graphs', :action => 'issue_growth_graph')) if @project.nil? %>
    <%= tag("embed", :width => "100%", :height => 300, :type => "image/svg+xml",
    :src => url_for(:controller => 'graphs', :action => 'issue_growth_graph', :project_id => @project.id, :tracker_ids=>[1,2,3])) unless @project.nil? %>
<% else %>
    <%= render :partial => 'issues/list_simple', :locals => { :issues => @issues } %>
<% end %>
